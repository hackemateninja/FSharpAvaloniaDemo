<UserControl 
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="90"
  x:Class="AvaDemo.Controls.HeaderControl">
  <!-- Header row 1-->
  <Grid
    ColumnDefinitions="* Auto Auto *"
    RowDefinitions="* *"
    Background="Gainsboro"
    Margin="10">
    <Image
      Grid.Row="0"
      Grid.Column="1"
      Grid.RowSpan="2"
      Margin="10"
      Width="60"
      Source="/Assets/coffee.png"
			/>
    <TextBlock
      Grid.Column="2"
      Grid.Row="0"
      Foreground="DarkGoldenrod"
      FontSize="20"
      Margin="0 8 0 0"
      FontWeight="Bold"
      Text="WIREBRAND COFFEE"
			/>
    <TextBlock
      Grid.Row="1"
      Grid.Column="2"
      TextAlignment="End"
      Foreground="DarkOliveGreen"
      FontSize="18"
      Margin="0 0 0 8"
      FontWeight="Black"
      Text=" v1.0"
			/>
  </Grid>
</UserControl>
