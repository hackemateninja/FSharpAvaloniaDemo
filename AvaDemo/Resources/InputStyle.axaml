<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="2">
      <TextBox 
        Classes="custom" 
        Text="" 
        Watermark="Write here"
      />
    </Border>
  </Design.PreviewWith>

  <Style Selector="TextBox">
    <Setter Property="Foreground" Value="{StaticResource MainContainerForegroundBrush}" />
    <Setter Property="Background" Value="{StaticResource MainContainerBackgroundBrush}"/>
    <Setter Property="Margin" Value="0 5 0 15" />
  </Style>
  
</Styles>
